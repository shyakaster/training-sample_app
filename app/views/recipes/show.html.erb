<p>
  <h1><%= @recipe.name %></h1>
</p>
<div class="row">
  <div class="col-lg-4 pull-right">
    <%= gravatar_for @recipe.chef, size: 200 %>
    <p>
      <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
    </p>
  </div>
  <div class="col-lg-8">
    <h4><%= @recipe.summary %></h4>
    <div class="well">
      <p>
        <strong>Steps:</strong>
      </p>
        <%= @recipe.description %>
    </div>

  </div>
</div>
<div class="row">
  <div class="col-lg 2">
    <h5 id="recipes_index_link"><%= link_to 'Return to recipe listings', recipes_path,class:"btn btn-warning btn-small"
    %></h5>
  </div>
</div>
